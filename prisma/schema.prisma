generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url = env("DATABASE_URL")
  relationMode = "prisma"
}

model Project {
  id              String   @id @default(cuid())
  title           String   @db.VarChar(255)
  summary         String   @db.VarChar(255)
  authorID        String
  createdAt       DateTime @default(now())
  ripleType       String   @db.VarChar(5) @default("solo")
  coverImageUrl   String   @default("") @db.VarChar(255)
  notionEmbedUrl  String   @default("") @db.VarChar(255)
  riples          Riple[]  // This establishes the one-to-many relation

  @@index([authorID])
}

model Riple {
  id        String  @id @default(cuid())
  title     String   @db.VarChar(255)
  content   String  // You can add any other fields you need for the Riple model here
  createdAt       DateTime @default(now())

  projectId String
  project   Project @relation(fields: [projectId], references: [id])
  authorID  String

  @@index([projectId])
}