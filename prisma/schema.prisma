generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url = env("DATABASE_URL")
  relationMode = "prisma"
}

model Project {
  id              String   @id @default(cuid())
  title           String   @db.VarChar(255)
  summary         String   @db.VarChar(5000)
  authorID        String
  
  projectType     String   @db.VarChar(5) @default("solo")
  status          String   @db.VarChar(255)@default("")

  createdAt       DateTime @default(now())
  endDate         DateTime @default(now())

  coverImageUrl   String   @default("") @db.VarChar(255)
  notionEmbedUrl  String   @default("") @db.VarChar(255)
  applyFormUrl    String   @default("") @db.VarChar(255)

  
  riples          Riple[]  // This establishes the one-to-many relation
  members         ProjectMembers[] 

  @@index([authorID])
}

model Riple {
  id        String  @id @default(cuid())
  title     String  @db.VarChar(255)
  content   String  @db.Text
  createdAt DateTime @default(now())

  projectId String
  project   Project @relation(fields: [projectId], references: [id])
  authorID  String

  @@index([projectId])
}

model ProjectMembers {
  id           String  @id @default(cuid())
  projectId    String 
  project      Project @relation(fields: [projectId], references: [id])
  userID       String  
  status       String  @db.VarChar(255)

  @@index([projectId])
}